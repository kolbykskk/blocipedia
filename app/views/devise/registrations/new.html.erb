<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <% if @user.errors.count > 0 %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@user.errors.count, "error") %>.</h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(@user.errors[:name]) do %>
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "off", class: 'form-control' %>
  <% end %>

  <%= form_group_tag(@user.errors[:email]) do %>
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
  <% end %>

  <%= form_group_tag(@user.errors[:password]) do %>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  <% end %>

  <%= form_group_tag(@user.errors[:password_confirmation]) do %>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
